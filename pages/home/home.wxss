}
.classify_wrap image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1px solid #ec1f23;
}
.classify_wrap text{
  display: block;
    color: #888888;
    font-size: 12px;
    height:30rpx;
